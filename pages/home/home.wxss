.home{
  height: 100%;
  width: 100%;
}

/* 顶部背景图 start */
.top-backgroup {
  height: 450rpx;
  z-index: -1;
}
.backgroud-image {
  width: 100%;
  height: 600rpx;
}
/* 顶部背景图 end */

.tc{
  overflow: hidden;
  position: absolute;
  z-index: 1000;
  left: 0;
  right: 0;
  top: 435rpx;
  height: 150rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: linear-gradient(to right,#0026ff, #00ffc8, #761ced);
  border-radius: 20rpx;
}
.tc .tc-title{
  height: 50rpx;
  color: #ffffff;
  margin-left: 10rpx;
}
.tc .tc-content{
  color: antiquewhite;
  text-align: center;
  line-height: 100rpx;
  font-size: large;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

